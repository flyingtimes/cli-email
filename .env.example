# Email Priority Manager Environment Variables

# Basic Settings
EPM_DEBUG=false
EPM_ENVIRONMENT=development

# Email Configuration
EPM_EMAIL_SERVER=smtp.gmail.com
EPM_EMAIL_PORT=587
EPM_EMAIL_USERNAME=your-email@gmail.com
EPM_EMAIL_PASSWORD=your-app-password
EPM_EMAIL_USE_SSL=true
EPM_EMAIL_USE_TLS=true

# AI Configuration
EPM_AI_API_KEY=your-bigmodel-api-key
EPM_AI_MODEL=text-davinci-003
EPM_AI_MAX_TOKENS=1000
EPM_AI_TEMPERATURE=0.7

# Database Configuration
EPM_DB_URL=sqlite:///email_priority.db
EPM_DB_ECHO=false
EPM_DB_POOL_SIZE=5

# Security
EPM_SECRETS_PASSPHRASE=your-secure-passphrase

# Paths
EPM_DATA_DIR=./data
EPM_LOG_DIR=./logs
EPM_TEMP_DIR=./temp