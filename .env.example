# Email Priority Manager Environment Configuration
# Copy this file to .env and fill in your actual values

# Email Configuration
EMAIL_SERVER=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# BigModel.cn API Configuration
BIGMODEL_API_KEY=your-bigmodel-api-key

# Database Configuration
DATABASE_PATH=~/.email_priority_manager/database.db

# Application Configuration
DEBUG=false
LOG_LEVEL=INFO

# AI Configuration
AI_MODEL=text-davinci-003
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.7

# Processing Configuration
BATCH_SIZE=50
MAX_RETRIES=3
CONCURRENT_PROCESSING=false

# Storage Configuration
ATTACHMENT_PATH=~/.email_priority_manager/attachments/
MAX_ATTACHMENT_SIZE=25MB